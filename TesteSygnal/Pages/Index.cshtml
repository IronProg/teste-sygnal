@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card">
    <div class="card-header bg-white">
        <h3 class="card-title">
            <i class="fas fa-search"></i> Filters
        </h3>
    </div>
    <div class="card-body bg-gradient-white">
        <form method="get" id="form-filter">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FormDTO_ControlNumber">Control Number</label>
                        <input
                            type="text"
                            class="form-control"
                            asp-for="FormDTO.ControlNumber"
                            aria-describedby="Order control number"
                            placeholder="Control Number">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FormDTO_State">Control Number</label>
                        <select
                            class="form-select"
                            asp-for="FormDTO.State"
                            asp-items="Model.FormDTO.StateList"
                            aria-describedby="Order State"></select>
                    </div>
                </div>
                <div class="col-md-12 pt-4 d-flex justify-content-center">
                    <button class="btn btn-outline-info" type="submit">
                        <i class="fas fa-search"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center py-4">
    <button class="btn btn-success" type="button" id="btn-add-order">
        <i class="fa-solid fa-plus"></i> Add Order
    </button>
</div>

<div id="table-container"></div>