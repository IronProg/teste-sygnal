@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Filtros</h3>
    </div>
    <div class="card-body">
        <form method="get" id="form-filter">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FormDTO_ControlNumber">Control Number</label>
                        <input
                            type="text"
                            class="form-control"
                            asp-for="FormDTO.ControlNumber"
                            aria-describedby="Order control number"
                            placeholder="Control Number">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FormDTO_State">Control Number</label>
                        <select
                            class="form-select"
                            asp-for="FormDTO.State"
                            asp-items="Model.FormDTO.StateList"
                            aria-describedby="Order State"></select>
                    </div>
                </div>
                <div class="col-md-12 pt-4 d-flex justify-content-center">
                    <button class="btn btn-outline-info" type="submit">
                        <i class="fas fa-search"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center py-4">
    <button class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#add-order-modal">
        <i class="fa-solid fa-plus"></i> Add Order
    </button>
</div>

<div id="table-container"></div>

<div class="modal fade" id="add-order-modal" tabindex="-1" aria-labelledby="add-order-modal" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" id="form-add-order">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="add-order-modal-title">Adding New Order</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="NewOderControlNumber">Control Number</label>
                        <input
                            type="text"
                            asp-for="NewOderControlNumber"
                            inputmode="numeric"
                            class="form-control"
                            placeholder="Type new order control number">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Order</button>
                </div>
            </div>
        </form>
    </div>
</div>