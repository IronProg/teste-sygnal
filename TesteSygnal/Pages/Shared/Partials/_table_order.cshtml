@model List<OrderViewModel>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th scope="col" colspan="6">Control Number</th>
          <th scope="col">State</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
          <tr>
            <td colspan="6">@order.ControlNumber</td>
            <td>
              <div class="badge badge-@order.StateColor">
                @order.StateName
              </div>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
