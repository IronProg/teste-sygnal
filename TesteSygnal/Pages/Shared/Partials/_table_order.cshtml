@model List<OrderViewModel>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th scope="col" colspan="6">Control Number</th>
          <th scope="col">State</th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model.OrderBy(order => order.ControlNumber))
        {
          <partial name="Partials/_table_order_row" model="order"></partial>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
